    @Html.LabelFor(model => model.Artist)<br />
    @Html.DropDownListFor(model => model.ArtistPId, artists)<br />
    @Html.ValidationMessageFor(model => model.Artist, "", new { @class = "text-danger" })
    <br />
    @Html.LabelFor(model => model.PublishDate)<br />
