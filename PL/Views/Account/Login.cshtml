@model BL.DTO.UserLoginDTO

@{
    ViewBag.Title = "Přihlaš se";
    Layout = "~/Views/Shared/_NoAuthLayout.cshtml";
}

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new { @class = "prihlaseni", role = "form" }))
{
    @Html.ValidationSummary(false, "", new { @class = "error_msg" })<br />

    @Html.AntiForgeryToken()
    @Html.LabelFor(m => m.Username, new { @type = "Email" })
    @Html.TextBoxFor(m => m.Username)

    @Html.LabelFor(m => m.Password)
    @Html.PasswordFor(m => m.Password)

    <input type="submit" value="Log in" class="button" />

        <p>
            @Html.ActionLink("Register as a new user", "Register")
        </p>
}